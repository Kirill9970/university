generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Sex {
  MALE
  FEMALE
}

model User {
  id          Int       @id @default(autoincrement())
  email       String    @unique
  name        String?   @unique
  phone       String?   @unique
  password    String
  dateOfBirth DateTime?
  sex         Sex?

  profiles Profile[]

  @@map("users")
}

model Profile {
  id           Int           @id @default(autoincrement())
  user         User          @relation(fields: [userId], references: [id])
  userId       Int
  faculty      String
  university   String
  group        String?
  gottenGrades Performance[] @relation("GottenGrades")
  madeGrades   Performance[] @relation("MadeGrades")

  @@map("profiles")
}

model Performance {
  id        Int     @id @default(autoincrement())
  student   Profile @relation(name: "GottenGrades", fields: [studentId], references: [id])
  studentId Int
  teacher   Profile @relation(name: "MadeGrades", fields: [teacherId], references: [id])
  teacherId Int
  grade     Int
  lesson    Int

  @@map("performances")
}
