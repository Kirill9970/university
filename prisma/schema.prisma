generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Sex {
  MALE
  FEMALE
}

model User {
  id          Int       @id @default(autoincrement())
  name        String    @unique
  email       String?   @unique
  phone       String?   @unique
  password    String
  dateOfBirth DateTime?
  sex         Sex?

  profiles Profile[]

  @@map("users")
}

model Profile {
  id         Int     @id @default(autoincrement())
  user       User    @relation(fields: [userId], references: [id])
  userId     Int
  faculty    String
  university String
  group      String?

  @@map("profiles")
}
